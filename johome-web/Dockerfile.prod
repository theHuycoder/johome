# path: ./Dockerfile

FROM node:16-alpine AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app
COPY package*.json ./
RUN yarn install --frozen-lockfile

FROM node:16-alpine AS runner
WORKDIR /app
COPY . .
COPY --from=deps /app/node_modules ./node_modules
ENV NODE_ENV production
RUN yarn build

EXPOSE 3000

CMD ["yarn", "start"]